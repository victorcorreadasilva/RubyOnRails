<h1>Pedidos</h1>

<table>
  <thead>
    <tr>
      <th>Data e Hora</th>
      <th>Numero da Nota Fiscal</th>
      <th>Valor do Frete</th>
      <th>Valor do Desconto</th>
      <th>Valor Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pedidos.each do |pedido| %>
      <tr>
        <td><%= pedido.data_hora %></td>
        <td><%= pedido.numero_nota_fiscal %></td>
        <td><%= pedido.valor_frete %></td>
        <td><%= pedido.valor_desconto %></td>
        <td><%= pedido.valor_total %></td>
        <td><%= link_to 'Mostrar', pedido %></td>
        <td><%= link_to 'Editar', edit_pedido_path(pedido) %></td>
        <td><%= link_to 'Excluir', pedido, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Novo Pedido', new_pedido_path %>
